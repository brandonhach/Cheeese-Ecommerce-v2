<%- include('../partials/header.ejs') %>
<body class="w-screen flex flex-col bg-neutral-900 font-sans pt-16">
	<main class="w-screen overflow-auto bg-neutral-900 text-white mb-10">
		<% if(cheeses.length > 0) { %>
		<div class="grid grid-cols-6 gap-4 p-6 items-center">
			<% cheeses.forEach(cheese => { %>
			<a href="/listing/item/<%= cheese.id %>" class="w-full">
				<article class="bg-slate-100 border-4 rounded-lg border-neutral-950 overflow-hidden">
					<div class="aspect-square w-full relative">
						<img
							src="<%= cheese.image %>"
							alt="<%= cheese.title %>"
							class="absolute inset-0 w-full h-full object-cover"
						/>
					</div>
					<div class="flex flex-col bg-neutral-950 p-1">
						<div>
							<h3 class="text-xl"><%= cheese.title %></h3>
							<p class="text-sm text-gray-500"><%= cheese.condition %></p>
						</div>
						<div class="flex flex-row justify-between">
							<p class="text-amber-200">$<%= cheese.price %></p>
							<p><%= cheese.totalOffers %> offers</p>
						</div>
					</div>
				</article>
			</a>
			<% }) %>
		</div>
		<% } else { %>
		<h1>There are no cheeses to display</h1>
		<% } %>
	</main>
</body>
<%- include('../partials/footer.ejs') %>
